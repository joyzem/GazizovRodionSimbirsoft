<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey_two"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_l">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/firstPersonImageView"
        style="@style/Theme.AndroidPractice.CornerSize50Percent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:elevation="0dp"
        android:foreground="@drawable/event_person_mask"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_friend" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/secondPersonImageView"
        style="@style/Theme.AndroidPractice.CornerSize50Percent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="-5dp"
        android:elevation="-1dp"
        android:foreground="@drawable/event_person_mask"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_friend" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/thirdPersonImageView"
        style="@style/Theme.AndroidPractice.CornerSize50Percent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="-5dp"
        android:elevation="-2dp"
        android:foreground="@drawable/event_person_mask"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_friend" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fourthPersonImageView"
        style="@style/Theme.AndroidPractice.CornerSize50Percent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="-5dp"
        android:elevation="-3dp"
        android:foreground="@drawable/event_person_mask"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_friend" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/fifthPersonImageView"
        style="@style/Theme.AndroidPractice.CornerSize50Percent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="-5dp"
        android:elevation="-4dp"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_friend" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/andMorePeopleTextView"
        style="@style/TextStyle13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/spacing_xs"
        android:text="+102" />
</LinearLayout>